<div class="card">
  <div class="card-body">
    <div class="alert alert-success"><%= notice %></div>
    <p>
      <strong>Title:</strong>
      <%= @article.title %>
    </p>

    <p>
      <strong>Content:</strong>
      <%= @article.content %>
    </p>

    <p>
      <strong>Author:</strong>
      <% if @article.author.present? %>
        <%= @article.author.name %>
      <% end %>
    </p>
  
  <%= link_to 'Edit', edit_article_path(@article) %> |
  <%= link_to 'Back', articles_path %>
  </div>
</div>
