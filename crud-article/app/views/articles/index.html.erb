<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= article.author.name %></td>
        <td><%= link_to 'Show', article, :class => 'btn btn-light btn-sm' %></td>
        <td><%= link_to 'Edit', edit_article_path(article), :class => 'btn btn-success btn-sm' %></td>
        <td><%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path, :class => 'btn btn-primary' %>
